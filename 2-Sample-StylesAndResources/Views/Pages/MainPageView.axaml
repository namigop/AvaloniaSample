<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSampleTutorial.Views.Pages.MainPageView">
    <Grid ColumnDefinitions="Auto, Auto, *">
        <Border Grid.Column="0" Width="250" Background="{StaticResource MyControlBackground}"></Border>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="8"
                      Background="Transparent"></GridSplitter>
        <Border Grid.Column="2"  Background="{StaticResource MyControlBackground}"></Border>
    </Grid>
</UserControl>
